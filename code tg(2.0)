	client.send_message(admin_id, f"Ğ¥Ğ¾Ñ‡Ğµ Ğ·Ğ²ÑĞ·Ğ°Ñ‚Ğ¸ÑÑ: {app_name}.\nĞ™Ğ¾Ğ³Ğ¾ (Ñ—Ñ—) Ğ°Ğ¹Ğ´Ğ¸: {app_username}\nĞ™Ğ¾Ğ³Ğ¾ Ñ‡Ğ¸ Ñ—Ñ— Ğ¿Ñ€Ğ¸Ñ‡Ğ¸Ğ½Ğ°:\n{app_text}")
	
	app_name.clear()
	app_username.clear()
	app_text.clear()
	client.send_message(chat_id, f"ğŸŒˆĞĞµ Ğ²Ğ´Ğ¾Ğ²Ğ·Ñ– Ğ· Ğ²Ğ°Ğ¼Ğ¸ Ğ·Ğ²ÑĞ¶ÑƒÑ‚ÑŒÑÑ, Ğ¾Ñ‡Ñ–ĞºÑƒĞ¹Ñ‚Ğµ!")




client.polling(none_stop=True)
